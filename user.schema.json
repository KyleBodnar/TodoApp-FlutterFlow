{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/user.schema.json",
  "title": "User Document",
  "description": "Schema for a Firestore user document in the ToDo app.",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Unique user identifier (Firestore document ID)."
    },
    "display_name": {
      "type": "string",
      "description": "User's display name."
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address."
    },
    "hometown": {
      "type": "string",
      "description": "User's hometown."
    },
    "photo_url": {
      "type": "string",
      "format": "uri",
      "description": "URL to the user's profile photo."
    },
    "birthdate": {
      "type": "string",
      "format": "date-time",
      "description": "User's birthdate (Firestore timestamp in ISO 8601)."
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the user was created."
    }
  },
  "required": ["uid", "display_name", "email", "created_time"],
  "additionalProperties": false
}
